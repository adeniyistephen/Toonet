@model MovieCreateViewModel

@{
    ViewBag.Title = "Create Movie";

}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">
        <fieldset>
            <legend>Add New Movie</legend>
            <div class="form-group">
                <label asp-for="Name">Movie Title</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Movie Title">
                <small id="emailHelp" class="form-text text-muted">Adding new movie to Toonet.</small>
            </div>
            <div class="form-group">
                <label asp-for="MovieInfo">Movie Info</label>
                <input asp-for="MovieInfo" class="form-control" id="exampleInputPassword1" placeholder="Movie Info">
            </div>
            <div class="form-group">
                <label asp-for="ReleseDate">Movie Info</label>
                <input asp-for="ReleseDate" class="form-control" id="exampleInputPassword1" placeholder="Relese Date">
            </div>
            <div class="form-group">
                <label asp-for="movieCategory">Select Parental Status</label>
                <select class="form-control" id="exampleSelect1" asp-for="movieCategory" asp-items="Html.GetEnumSelectList<MovieCategory>()">
                    <option value="">Please Select</option>
                </select>
            </div>
            <div class="form-group">
                <div class="input-group mb-1">
                    <div class="custom-file">
                        <input asp-for="Photo" class="custom-file-input" id="inputGroupFile02" placeholder="Upload Cartoon Poster">
                        <label class="custom-file-label" asp-for="Photo">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-1">
                    <div class="custom-file">
                        <input asp-for="Video" class="custom-file-input" id="inputGroupFile02" placeholder="Upload Cartoon">
                        <label class="custom-file-label" asp-for="Video">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="cws_button">Create</button>
                </div>
            </div>
        </fieldset>    
    </form>