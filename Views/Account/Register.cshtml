@model RegisterViewModel
@{
    ViewBag.Title = "Registration";

}

<div class="jumbotron shadow mx-auto row bg-white" style="height:60%">
    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post">
        <fieldset>
            <legend>Register as a Parent or Guardian</legend>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" id="exampleInputEmail1">
            </div>
            <div class="form-group">
                <label asp-for="SecondName">Last Name</label>
                <input asp-for="SecondName" class="form-control" id="exampleInputEmail1">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmedPassword">Confirm Password</label>
                <input asp-for="ConfirmedPassword" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="studentGuadian">Select Parental Status</label>
                <select class="form-control" id="exampleSelect1" asp-for="studentGuadian" asp-items="Html.GetEnumSelectList<StudentGuadian>()">
                    <option value="">Please Select</option>
                </select> 
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="cws_button">Register</button>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </fieldset>
    </form>
</div>
